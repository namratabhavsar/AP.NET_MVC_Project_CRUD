@{
}
@model List<WebApp2.Models.Student>
<h1>Student List</h1>
<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Phone</th>
            <th scope="col">Subscribed</th>
            <th scope="col">Edit</th>
            <th scope="col">Delete</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Email</td>
                <td>@item.Phone</td>
                 @if(item.Subscribed)
                {
                    <td>Yes</td>
                }
                else
                {
                    <td>No</td>
                }
                <td><a class="btn btn-primary" asp-controller="Students" asp-action="Edit" asp-route-id="@item.Id">Update</a></td>
                <td><a class="btn btn-danger" asp-controller="Students" asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>
            </tr>

        }
    </tbody>
</table>